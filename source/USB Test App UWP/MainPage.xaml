    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test_App_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="button" Content="Open device" HorizontalAlignment="Left" Margin="82,82,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <Button x:Name="button1" Content="Send Raw data" HorizontalAlignment="Left" Margin="82,140,0,0" VerticalAlignment="Top" Click="button1_Click"/>
        <Button x:Name="button_Copy" Content="Ping device" HorizontalAlignment="Left" Margin="82,233,0,0" VerticalAlignment="Top" Click="button_Copy_Click"/>

    </Grid>
</Page>
